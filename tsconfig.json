{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "moduleResolution": "node",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "include": ["./src/**/*", "index.d.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
